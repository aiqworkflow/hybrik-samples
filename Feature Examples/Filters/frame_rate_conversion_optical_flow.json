{
  "definitions": {
    "descriptor": "optical flow - experimental",
    "source_0_path": "https://hybrik-examples.s3.amazonaws.com/public/sources",
    "source_0_file": "sample1.mp4",
    "destination_path": "s3://your-bucket/tutorials/optical_flow",
    "output_filename": "output"
  },
  "name": "{{descriptor}}",
  "payload": {
    "elements": [
      {
        "uid": "source",
        "kind": "source",
        "payload": {
          "kind": "asset_url",
          "payload": {
            "storage_provider": "http",
            "url": "{{source_0_path}}/{{source_0_file}}"
          }
        }
      },
      {
        "uid": "transcode_task",
        "kind": "transcode",
        "task": {
          "retry_method": "fail"
        },
        "payload": {
          "location": {
            "storage_provider": "s3",
            "path": "{{destination_path}}"
          },
          "options": {
            "pipeline": {
              "encoder_version": "hybrik_4.2_8bit"
            }
          },
          "targets": [
            {
              "file_pattern": "{{output_filename}}{default_extension}",
              "existing_files": "rename_new",
              "container": {
                "kind": "mp4"
              },
              "video": {
                "codec": "h264",
                "width": 720,
                "height": 406,
                "frame_rate": 25,
                "frame_rate_converter": {
                  "kind": "hybrik_optical_flow",
                  "flow_scale": 4,
                  "num_threads": 4
                }
              },
              "audio": [
                {
                  "codec": "aac",
                  "channels": 2,
                  "sample_rate": 48000,
                  "sample_size": 16
                }
              ]
            }
          ]
        }
      }
    ],
    "connections": [
      {
        "from": [
          {
            "element": "source"
          }
        ],
        "to": {
          "success": [
            {
              "element": "transcode_task"
            }
          ]
        }
      }
    ]
  }
}